<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- List to Choose Between Narrow Deep v Shallow Broad -->
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_UI_NDBS_entries"
        android:entryValues="@array/pref_UI_NDBS_values"
        android:key="@string/Pref_UI_NDBS_List"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_UI_NDBS_title"/>

    <!-- Switch to Enable/Disable Decision Trees -->
    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/Pref_UI_DT_Switch"
        android:title="@string/pref_UI_DT_title"/>

</PreferenceScreen>