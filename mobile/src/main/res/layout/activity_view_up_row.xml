<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/view_prompt_bg_selector"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <!-- Date Time and Delete -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Date Time -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".90">

            <TextView
                android:id="@+id/pref_prompt_view_up_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_centerVertical="true"
                android:text="23/07/16 @ 22:03"
                android:textColor="@color/DarkRed"
                android:textSize="24dp"/>

        </RelativeLayout>

        <!-- Delete Image -->
        <RelativeLayout
            android:id="@+id/pref_prompt_view_up_delete_cross"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_prompt_view_up_delete"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/pref_prompt_view_up_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content: Default"
            android:textSize="18dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/pref_prompt_view_up_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <!-- Slider Level Text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/pref_prompt_view_up_sliderTxt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:clickable="true"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Subtle"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pref_prompt_view_up_sliderTxt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:clickable="true"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="|"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pref_prompt_view_up_sliderTxt3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:clickable="true"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="|"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pref_prompt_view_up_sliderTxt4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:clickable="true"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Obvious"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pref_prompt_view_up_edit_level_btn"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="Edit"
            android:layout_centerInParent="true"
            android:background="@color/LightSteelBlue"/>

    </RelativeLayout>

</LinearLayout>