<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/White">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".70">

        <TextView
            android:id="@+id/mainPromptText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you need to set any reminders?"
            android:layout_centerInParent="true"
            android:textColor="@color/cs3GreenDark2"
            android:textAlignment="center"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".30"
        android:background="@color/cs3Blue">

        <Button
            android:id="@+id/promptDismissBtn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="Dismiss"
            android:layout_centerInParent="true"
            android:background="@color/cs3GreenDark2"/>

    </RelativeLayout>

</LinearLayout>